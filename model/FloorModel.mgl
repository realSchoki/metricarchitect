import "model/SensorModel.mgl" as SensorModel

@style("model/General.style")
@primeviewer
graphModel FloorModel {
	package dev.schoki.metricarchitect.model.floor
	nsURI "http://cinco.scce.info/product/metricarchitect/model/floor"
	diagramExtension "floor"
	
	attr EString as name
	
	@style(sensorInFloorModel, "${name}")
	@icon('src/main/resources/icons/bolt-solid.png')
	node SensorDeviceInstance {
		@pvLabel (name)
     	@pvFileExtension ("sensor")
     	prime SensorModel::SensorDevice as sensor
		outgoingEdges (Filter)
		attr EString as name := "DeviceName"
		attr EString as url := "localhost:8080"
	}	
	
	@style(deviceGroup, "${name}")
	@icon('src/main/resources/icons/calculator-solid.png')
	node DeviceGroup {
		incomingEdges (Filter)
		attr EString as name := "Description..."
		@possibleValuesProvider("dev.schoki.metricarchitect.provider.FloorDeviceGroupIconValueProvider")
		attr EString as icon
	}
	
	@style(simpleArrow)
	edge Filter {
	}
	
	@style(floorImage)
	container FloorImage {
		containableElements ( DeviceGroup , SensorDeviceInstance )
		attr EString as image
	}
}

